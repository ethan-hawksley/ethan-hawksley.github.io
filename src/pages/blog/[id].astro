---
import type { GetStaticPaths } from 'astro';
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import A from '../../components/A.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { personSchema, websiteSchema } from '../../lib/schema.ts';

export const getStaticPaths = (async () => {
  const posts = (await getCollection('posts')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
  );

  return posts.map((post, index) => ({
    params: { id: post.id },
    props: {
      post,
      prevPost: posts[index + 1] ?? null,
      nextPost: posts[index - 1] ?? null,
    },
  }));
}) satisfies GetStaticPaths;

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await render(post);

const words = (post.body ?? '').split(/\s+/).length;
const readingTime = Math.max(1, Math.ceil(words / 238));

const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    websiteSchema,
    {
      '@type': 'Blog',
      '@id': 'https://hawksley.dev/blog/#blog',
      url: 'https://hawksley.dev/blog/',
      name: "Ethan Hawksley's Blog",
      publisher: { '@id': 'https://hawksley.dev/#person' },
    },
    {
      '@type': 'BlogPosting',
      '@id': `https://hawksley.dev/blog/${post.id}/#article`,
      mainEntityOfPage: `https://hawksley.dev/blog/${post.id}/`,
      url: `https://hawksley.dev/blog/${post.id}/`,
      headline: post.data.title,
      description: post.data.description,
      image: post.data.coverImage
        ? new URL(post.data.coverImage, 'https://hawksley.dev').toString()
        : 'https://hawksley.dev/og-image-1200x630.png?v=2',
      datePublished: post.data.pubDate.toISOString(),
      dateModified: (post.data.modifiedDate || post.data.pubDate).toISOString(),
      wordCount: words,
      timeRequired: `PT${readingTime}M`,
      isAccessibleForFree: true,
      author: {
        '@id': 'https://hawksley.dev/#person',
        '@type': 'Person',
        name: 'Ethan Hawksley',
        url: 'https://hawksley.dev/',
      },
      publisher: { '@id': 'https://hawksley.dev/#person' },
      isPartOf: {
        '@id': 'https://hawksley.dev/blog/#blog',
      },
      keywords: post.data.tags,
      inLanguage: 'en-GB',
      copyrightYear: post.data.pubDate.getFullYear(),
      copyrightHolder: { '@id': 'https://hawksley.dev/#person' },
    },
    personSchema,
    {
      '@type': 'BreadcrumbList',
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Home',
          item: 'https://hawksley.dev/',
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: 'Blog',
          item: 'https://hawksley.dev/blog/',
        },
        {
          '@type': 'ListItem',
          position: 3,
          name: post.data.title,
          item: `https://hawksley.dev/blog/${post.id}/`,
        },
      ],
    },
  ],
};
---

<Layout
  pageTitle={`${post.data.title} | Ethan Hawksley`}
  pageDescription={post.data.description}
  highlightedLink="blog"
  jsonLd={jsonLd}
  ogType="article"
  ogImage={post.data.coverImage
    ? new URL(post.data.coverImage, Astro.site).toString()
    : undefined}
  article={{
    publishedTime: post.data.pubDate.toISOString(),
    modifiedTime: post.data.modifiedDate?.toISOString(),
    tags: post.data.tags,
  }}
>
  <article id="post">
    <nav aria-label="Breadcrumb" class="breadcrumb">
      <A href="/blog/" style="text-decoration: none;">
        <span aria-hidden="true">←</span> Back to blog
      </A>
    </nav>
    <header>
      <h1>{post.data.title}</h1>
      <small>
        Published
        <FormattedDate date={post.data.pubDate} />
        {
          post.data.modifiedDate && (
            <>
              · Modified <FormattedDate date={post.data.modifiedDate} />
            </>
          )
        }
        <span>· {readingTime} min read</span>
        {post.data.tags && <span> · {post.data.tags.join(', ')}</span>}
      </small>
    </header>
    <div class="content">
      <Content components={{ a: A }} />
    </div>
    <nav class="post-nav" aria-label="Post navigation">
      {
        prevPost && (
          <div class="nav-link prev">
            <small>← Previous</small>
            <A href={`/blog/${prevPost.id}/`}>{prevPost.data.title}</A>
          </div>
        )
      }
      {
        nextPost && (
          <div class="nav-link next">
            <small>Next →</small>
            <A href={`/blog/${nextPost.id}/`}>{nextPost.data.title}</A>
          </div>
        )
      }
      <div class="nav-all">
        <A href="/blog/">View all posts</A>
      </div>
    </nav>
  </article>
</Layout>
<style is:global>
  .content {
    > :first-child {
      margin-top: 0;
    }

    > :last-child {
      margin-bottom: 0;
    }

    p,
    li {
      max-width: 65ch;
    }

    p {
      margin-block: 1.25rem;
      font-size: var(--font-size-base);
      line-height: var(--line-height-relaxed);
    }

    h2 {
      font-size: var(--font-size-xl);
      margin-top: 1.75rem;
      margin-bottom: 1rem;
      font-weight: var(--font-weight-semibold);
      line-height: var(--line-height-snug);
    }

    h3 {
      font-size: var(--font-size-lg);
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
      font-weight: var(--font-weight-semibold);
      line-height: var(--line-height-snug);
    }

    li {
      font-size: var(--font-size-base);
      line-height: var(--line-height-relaxed);
    }

    img {
      border-radius: 1rem;
    }

    blockquote {
      border-left: 4px solid var(--color-accent);
      background: var(--color-surface);
      color: var(--color-text-muted);
      padding: 1rem 1.5rem;
      border-radius: 0 0.5rem 0.5rem 0;
      font-style: italic;
    }

    blockquote > :last-child {
      margin-bottom: 0;
    }
  }

  .astro-code {
    border: 2px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 0.25rem;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    max-width: 100%;
    font-family:
      'JetBrains Mono', ui-monospace, 'Cascadia Code', 'Fira Code', monospace;
    font-feature-settings:
      'kern' 1,
      'zero' 1;
  }

  .astro-code code {
    display: block;
    content-visibility: auto;
    contain-intrinsic-size: 0 200px;
    font-size: var(--font-size-xs);
  }

  @media (min-width: 640px) {
    .astro-code code {
      font-size: var(--font-size-sm);
    }
  }

  .astro-code {
    background-color: var(--color-surface) !important;
  }

  .astro-code span {
    background-color: transparent !important;
  }

  .dark {
    .astro-code,
    .astro-code span {
      color: var(--shiki-dark) !important;
      background-color: var(--shiki-dark-bg) !important;
      font-style: var(--shiki-dark-font-style) !important;
      font-weight: var(--shiki-dark-font-weight) !important;
      text-decoration: var(--shiki-dark-text-decoration) !important;
    }
  }

  html.enable-transitions .astro-code span {
    transition: color 250ms ease-out;
  }
</style>

<style>
  .breadcrumb {
    margin-bottom: 0.5rem;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  article {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    h1 {
      font-size: var(--font-size-2xl);
      margin-bottom: 1.5rem;
      text-decoration: var(--color-accent) underline 3px;
      text-underline-offset: 0.5rem;
      font-weight: var(--font-weight-semibold);
      line-height: var(--line-height-tight);
      letter-spacing: var(--letter-spacing-tight);
    }

    small {
      color: var(--color-text-muted);
      font-size: var(--font-size-sm);
    }
  }

  .post-nav {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-top: 2.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .nav-link {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .nav-link small {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    font-weight: var(--font-weight-medium);
  }

  .nav-link :global(a) {
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-snug);
    text-wrap: pretty;
  }

  .nav-link :global(a:active) {
    transform: scale(0.96);
  }

  .nav-all {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    text-align: center;
  }

  @media (min-width: 640px) {
    .post-nav {
      grid-template-columns: 1fr 1fr;
    }

    .nav-link.next {
      grid-column: 2;
      text-align: right;
      align-items: flex-end;
    }

    .nav-all {
      grid-column: 1 / -1;
    }
  }
</style>
