---
import type { GetStaticPaths } from 'astro';
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import A from '../../components/A.astro';

export const getStaticPaths = (async () => {
  const posts = await getCollection('posts');
  return posts.map((post) => ({ params: { id: post.id }, props: { post } }));
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const { Content } = await render(post);

const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'BreadcrumbList',
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Home',
          item: 'https://hawksley.dev/',
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: 'Blog',
          item: 'https://hawksley.dev/blog/',
        },
        {
          '@type': 'ListItem',
          position: 3,
          name: post.data.title,
          item: `https://hawksley.dev/blog/${post.id}/`,
        },
      ],
    },
    {
      '@type': 'BlogPosting',
      '@id': `https://hawksley.dev/blog/${post.id}/#article`,
      mainEntityOfPage: `https://hawksley.dev/blog/${post.id}/`,
      headline: post.data.title,
      description: post.data.description,
      image: 'https://hawksley.dev/og-image-1200x630.png',
      datePublished: post.data.pubDate.toISOString(),
      dateModified: (post.data.modifiedDate || post.data.pubDate).toISOString(),
      author: {
        '@id': 'https://hawksley.dev/#person',
      },
      publisher: {
        '@id': 'https://hawksley.dev/#person',
      },
      keywords: post.data.tags,
      inLanguage: 'en-GB',
      copyrightYear: new Date(post.data.pubDate).getFullYear(),
    },
    {
      '@type': 'Person',
      '@id': 'https://hawksley.dev/#person',
      name: 'Ethan Hawksley',
      url: 'https://hawksley.dev/',
    },
  ],
};
---

<Layout
  pageTitle={post.data.title}
  pageDescription={post.data.description}
  highlightedLink="blog"
  jsonLd={jsonLd}
  ogType="article"
  article={{
    publishedTime: post.data.pubDate.toISOString(),
    modifiedTime: post.data.modifiedDate?.toISOString(),
    tags: post.data.tags,
  }}
>
  <article id="post">
    <header>
      <h1>{post.data.title}</h1>
      <small>
        <time datetime={post.data.pubDate.toISOString()}>
          Published {post.data.pubDate.toLocaleString().slice(0, 10)}
        </time>
        {post.data.tags && <span> - {post.data.tags.join(', ')}</span>}
      </small>
    </header>
    <Content components={{ a: A }} />
    <footer><A href="/blog/">Back to index</A></footer>
  </article>
</Layout>
<style is:global>
  article {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    h1 {
      font-size: 2rem;
      margin-bottom: 1.5rem;
      text-decoration: var(--color-accent) underline 3px;
      text-underline-offset: 0.5rem;
      line-height: 1.2;
      font-weight: 600;
    }

    small {
      color: var(--color-text-muted);
    }

    h2 {
      font-size: 1.5rem;
      margin-bottom: 0.8rem;
      text-decoration: var(--color-accent) underline 3px;
      text-underline-offset: 0.5rem;
      line-height: 1.3;
      font-weight: 600;
    }

    h3 {
      font-size: 1.3rem;
      margin-bottom: 0.8rem;
      text-decoration: var(--color-accent) underline 3px;
      text-underline-offset: 0.5rem;
      line-height: 1.3;
      font-weight: 600;
    }
  }

  .astro-code {
    border: 2px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 0.25rem;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    max-width: 100%;
    font-family:
      'JetBrains Mono', ui-monospace, 'Cascadia Code', 'Fira Code', monospace;
  }

  .astro-code code {
    display: block;
    content-visibility: auto;
    contain-intrinsic-size: 0 200px;
    font-size: 0.75rem;
  }

  @media (min-width: 640px) {
    .astro-code code {
      font-size: 1rem;
    }
  }

  .astro-code,
  .astro-code span {
    background-color: var(--color-surface) !important;
  }

  .dark {
    /*noinspection CssUnresolvedCustomProperty*/

    .astro-code,
    .astro-code span {
      color: var(--shiki-dark) !important;
      font-style: var(--shiki-dark-font-style) !important;
      font-weight: var(--shiki-dark-font-weight) !important;
      text-decoration: var(--shiki-dark-text-decoration) !important;
    }
  }

  .enable-transitions {
    .astro-code,
    .astro-code span {
      transition:
        background-color 250ms ease-out,
        color 250ms ease-out,
        border-color 250ms ease-out;
    }
  }
</style>

<style>
  footer {
    margin-bottom: 1.5rem;
  }
</style>
