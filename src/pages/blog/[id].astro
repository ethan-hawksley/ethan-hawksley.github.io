---
import type { GetStaticPaths } from 'astro';
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import A from '../../components/A.astro';
import FormattedDate from '../../components/FormattedDate.astro';

export const getStaticPaths = (async () => {
  const posts = (await getCollection('posts')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
  );

  return posts.map((post, index) => ({
    params: { id: post.id },
    props: {
      post,
      prevPost: posts[index + 1] ?? null,
      nextPost: posts[index - 1] ?? null,
    },
  }));
}) satisfies GetStaticPaths;

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await render(post);

const words = (post.body ?? '').split(/\s+/).length;
const readingTime = Math.max(1, Math.ceil(words / 200));

const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'BlogPosting',
      '@id': `https://hawksley.dev/blog/${post.id}/#article`,
      mainEntityOfPage: `https://hawksley.dev/blog/${post.id}/`,
      url: `https://hawksley.dev/blog/${post.id}/`,
      headline: post.data.title,
      description: post.data.description,
      image: 'https://hawksley.dev/og-image-1200x630.png',
      datePublished: post.data.pubDate.toISOString(),
      dateModified: (post.data.modifiedDate || post.data.pubDate).toISOString(),
      author: {
        '@id': 'https://hawksley.dev/#person',
      },
      publisher: {
        '@id': 'https://hawksley.dev/#person',
      },
      keywords: post.data.tags,
      inLanguage: 'en-GB',
      copyrightYear: new Date(post.data.pubDate).getFullYear(),
    },
    {
      '@type': 'Person',
      '@id': 'https://hawksley.dev/#person',
      name: 'Ethan Hawksley',
      url: 'https://hawksley.dev/',
    },
    {
      '@type': 'BreadcrumbList',
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Home',
          item: 'https://hawksley.dev/',
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: 'Blog',
          item: 'https://hawksley.dev/blog/',
        },
        {
          '@type': 'ListItem',
          position: 3,
          name: post.data.title,
          item: `https://hawksley.dev/blog/${post.id}/`,
        },
      ],
    },
  ],
};
---

<Layout
  pageTitle={post.data.title}
  pageDescription={post.data.description}
  highlightedLink="blog"
  jsonLd={jsonLd}
  ogType="article"
  article={{
    publishedTime: post.data.pubDate.toISOString(),
    modifiedTime: post.data.modifiedDate?.toISOString(),
    tags: post.data.tags,
  }}
>
  <article id="post">
    <header>
      <h1>{post.data.title}</h1>
      <small>
        Published
        <FormattedDate date={post.data.pubDate} />
        {
          post.data.modifiedDate && (
            <>
              · Modified <FormattedDate date={post.data.modifiedDate} />
            </>
          )
        }
        <span>· {readingTime} min read</span>
        {post.data.tags && <span> · {post.data.tags.join(', ')}</span>}
      </small>
    </header>
    <div class="content">
      <Content components={{ a: A }} />
    </div>
    <footer><A href="/blog/">Back to index</A></footer>
    <nav class="post-nav" aria-label="Post navigation">
      {
        prevPost ? (
          <A href={`/blog/${prevPost.id}/`} class="prev">
            <small>← Previous</small>
            <span>{prevPost.data.title}</span>
          </A>
        ) : (
          <div />
        )
      }
      {
        nextPost ? (
          <A href={`/blog/${nextPost.id}/`} class="next">
            <small>Next →</small>
            <span>{nextPost.data.title}</span>
          </A>
        ) : (
          <div />
        )
      }
    </nav>
  </article>
</Layout>
<style is:global>
  .content {
    > :first-child {
      margin-top: 0;
    }

    > :last-child {
      margin-bottom: 0;
    }

    p {
      margin-block: 1.25rem;
      font-size: var(--font-size-base);
      line-height: var(--line-height-relaxed);
    }

    h2 {
      font-size: var(--font-size-xl);
      margin-top: 1.75rem;
      margin-bottom: 1rem;
      text-decoration: var(--color-accent) underline 3px;
      text-underline-offset: 0.5rem;
      font-weight: var(--font-weight-semibold);
      line-height: var(--line-height-snug);
    }

    h3 {
      font-size: var(--font-size-lg);
      margin-top: 1.5rem;
      margin-bottom: 0.75rem;
      text-decoration: var(--color-accent) underline 2px;
      text-underline-offset: 0.5rem;
      font-weight: var(--font-weight-semibold);
      line-height: var(--line-height-snug);
    }

    li {
      font-size: var(--font-size-base);
      line-height: var(--line-height-relaxed);
    }

    img {
      border-radius: 1rem;
    }
  }

  .astro-code {
    border: 2px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 0.25rem;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    max-width: 100%;
    font-family:
      'JetBrains Mono', ui-monospace, 'Cascadia Code', 'Fira Code', monospace;
    font-feature-settings:
      'kern' 1,
      'zero' 1;
  }

  .astro-code code {
    display: block;
    content-visibility: auto;
    contain-intrinsic-size: 0 200px;
    font-size: var(--font-size-xs);
  }

  @media (min-width: 640px) {
    .astro-code code {
      font-size: var(--font-size-sm);
    }
  }

  .astro-code,
  .astro-code span {
    background-color: var(--color-surface) !important;
  }

  .dark {
    /*noinspection CssUnresolvedCustomProperty*/

    .astro-code,
    .astro-code span {
      color: var(--shiki-dark) !important;
      font-style: var(--shiki-dark-font-style) !important;
      font-weight: var(--shiki-dark-font-weight) !important;
      text-decoration: var(--shiki-dark-text-decoration) !important;
    }
  }

  .enable-transitions {
    .astro-code,
    .astro-code span {
      transition:
        background-color 250ms ease-out,
        color 250ms ease-out,
        border-color 250ms ease-out;
    }
  }
</style>

<style>
  article {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    h1 {
      font-size: var(--font-size-2xl);
      margin-bottom: 1.5rem;
      text-decoration: var(--color-accent) underline 3px;
      text-underline-offset: 0.5rem;
      font-weight: var(--font-weight-semibold);
      line-height: var(--line-height-tight);
      letter-spacing: var(--letter-spacing-tight);
    }

    small {
      color: var(--color-text-muted);
      font-size: var(--font-size-sm);
    }
  }

  footer {
    margin-bottom: 1.5rem;
  }

  .post-nav {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .post-nav a {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    max-width: 45%;
  }

  .post-nav small {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
  }

  .post-nav .next {
    text-align: right;
    margin-left: auto;
  }
</style>
