---
import Layout from '../layouts/Layout.astro';
---

<Layout
  pageTitle="Error 404: Page Not Found"
  pageDescription="The page you are looking for does not exist."
  robots="noindex, nofollow"
>
  <h1>404</h1>
  <p>
    Oops! Looks like you've ventured off into the wilderness and gotten lost.
  </p>
  <a href="/">Return Home!</a>
  <style>
    h1 {
      font-size: 2rem;
      margin-bottom: 1.5rem;
      text-decoration: var(--color-accent) underline 3px;
      text-underline-offset: 0.5rem;
      line-height: 1.2;
      font-weight: 600;
    }

    a {
      color: inherit;
      font-size: 1.125rem;
      transition: color 0.3s ease;
      text-decoration: var(--color-accent) underline 2px;
      text-underline-offset: 0.25rem;
    }

    a:hover {
      color: var(--color-accent);
    }
  </style>
</Layout>
