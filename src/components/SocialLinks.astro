---
import Email from '../assets/email.svg';
import Github from '../assets/github.svg';
import External from '../assets/external.svg';
---

<address>
  <a href="mailto:ethan@hawksley.dev"
    ><Email class="email" aria-hidden="true" /><span class="email-address"
      >ethan@hawksley.dev</span
    ></a
  >
  <a href="https://github.com/ethan-hawksley" rel="noopener" target="_blank"
    ><Github class="github" aria-hidden="true" /><span class="github-account"
      >ethan-hawksley<External /></span
    ></a
  >
</address>

<style>
  address {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  @media (min-width: 480px) {
    address {
      flex-direction: row;
      gap: 1rem;
    }
  }

  a {
    padding: 0.25rem;
    width: fit-content;
    color: inherit;
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.5rem;
    text-decoration: var(--color-accent) underline 2px;
    text-underline-offset: 0.25rem;
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--color-accent);
  }

  .email-address {
    min-width: 18ch;
  }

  .github-account {
    min-width: 13ch;
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }

  .github-account svg {
    transition: transform 0.2s ease-in-out;
    width: 0.85em;
    height: 0.85em;
  }

  .github-account:hover svg {
    transform: translate(2px, -2px);
  }
</style>
