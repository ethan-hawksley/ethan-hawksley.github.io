---
import External from '../assets/external.svg';
import A from './A.astro';
interface Props {
  name: string;
  description: string;
  liveUrl?: string;
  sourceUrl: string;
}
const { name, description, sourceUrl, liveUrl } = Astro.props;
---

<article>
  <header>
    <h3>{name}</h3>
  </header>
  <p>{description}</p>
  <footer>
    <A href={sourceUrl} aria-label={`View ${name} source code`}>Source Code</A>
    {
      liveUrl && (
        <A href={liveUrl} aria-label={`View ${name} live demo`}>
          Live Demo
        </A>
      )
    }
  </footer>
</article>
<style>
  article {
    background-color: var(--color-surface);
    padding: 1.5rem;
    border: 2px solid var(--color-border);
    gap: 1rem;
    border-radius: 0.5rem;
    transition: border-color 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  article:hover {
    border-color: var(--color-accent);
  }

  h3 {
    font-size: 1.25rem;
    line-height: 1.4;
    font-weight: 600;
  }

  p {
    color: var(--color-text-muted);
    flex-grow: 1;
  }

  footer {
    display: flex;
    gap: 1rem;
  }

  a {
    padding: 0.25rem;
    color: inherit;
    text-decoration: var(--color-accent) underline 2px;
    text-underline-offset: 0.25rem;
    transition: color 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }

  a:hover {
    color: var(--color-accent);
  }

  a svg {
    transition: transform 0.2s ease-in-out;
    width: 0.85em;
    height: 0.85em;
  }

  a:hover svg {
    transform: translate(2px, -2px);
  }
</style>
