---
interface Props {
  name: string;
  description: string;
  liveUrl: string | undefined;
  sourceUrl: string;
}
const { name, description, sourceUrl, liveUrl } = Astro.props;
---

<article>
  <header>
    <h3>{name}</h3>
  </header>
  <p>{description}</p>
  <footer>
    <a
      href={sourceUrl}
      rel="noopener"
      target="_blank"
      aria-label={`View ${name} source code`}>Source Code</a
    >
    {
      liveUrl && (
        <a
          href={liveUrl}
          rel="noopener noreferrer"
          target="_blank"
          aria-label={`View ${name} live demo`}
        >
          Live Demo
        </a>
      )
    }
  </footer>
</article>
<style>
  article {
    background-color: var(--color-surface);
    padding: 1.5rem;
    border: 2px solid var(--color-border);
    gap: 1rem;
    border-radius: 0.5rem;
    transition: border-color 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  article:hover {
    border-color: var(--color-accent);
  }

  h3 {
    font-size: 1.25rem;
    line-height: 1.4;
    font-weight: 600;
  }

  p {
    color: #525252;
    flex-grow: 1;
  }

  footer {
    display: flex;
    gap: 1rem;
  }

  a {
    padding: 0.25rem;
    color: inherit;
    text-decoration: var(--color-accent) underline 2px;
    text-underline-offset: 0.25rem;
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--color-accent);
  }
</style>
