---
import LogoRound from '../assets/logo_round.svg';
import ThemeToggle from './ThemeToggle.astro';
interface Props {
  highlightedLink: string | undefined;
}
const { highlightedLink } = Astro.props;
if (highlightedLink === 'home') {
}
---

<nav>
  <a href="/"
    ><LogoRound
      width="3rem"
      height="3rem"
      aria-label="home"
      aria-hidden="true"
    /></a
  >
  <div>
    <a href="/" class={`${highlightedLink === 'home' ? 'active' : ''}`}>Home</a>
    <a href="/blog/" class={`${highlightedLink === 'blog' ? 'active' : ''}`}
      >Blog</a
    >
    <ThemeToggle />
  </div>
</nav>
<style>
  nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 3rem;
    margin: 1rem;
  }

  a {
    color: inherit;
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.125rem;
    transition: text-decoration 0.3s ease;
    text-decoration-color: #ff4f00;
    text-decoration-thickness: 0;
  }

  div {
    display: flex;
    flex-direction: row;
    gap: 1.5rem;
  }

  .active {
    color: #ff4f00;
    font-weight: 600;
    text-decoration: #ff4f00 underline 2px;
    text-underline-offset: 0.5rem;
  }

  a:hover {
    text-decoration: #ff4f00 underline 4px;
    text-underline-offset: 0.5rem;
  }
</style>
