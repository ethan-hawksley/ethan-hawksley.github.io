---
import LogoRound from '../assets/logo_round.svg';
import ThemeToggle from './ThemeToggle.astro';
interface Props {
  highlightedLink?: 'home' | 'blog';
}
const { highlightedLink } = Astro.props;
---

<header>
  <nav aria-label="Main navigation">
    <a href="/" aria-label="Home - Ethan Hawksley" id="logo"
      ><LogoRound width="3rem" height="3rem" aria-hidden="true" /></a
    >
    <div>
      <a
        href="/"
        class={`${highlightedLink === 'home' ? 'active' : ''}`}
        aria-current={highlightedLink === 'home' ? 'page' : undefined}
      >
        Home
      </a>
      <a
        href="/blog/"
        class={`${highlightedLink === 'blog' ? 'active' : ''}`}
        aria-current={highlightedLink === 'blog' ? 'page' : undefined}
      >
        Blog
      </a>
      <ThemeToggle />
    </div>
  </nav>
</header>

<style>
  nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 3rem;
    margin-inline: auto;
    padding-inline: 1.5rem;
    max-width: 900px;
  }

  #logo {
    width: 3rem;
    height: 3rem;
  }

  a {
    padding: 0.75rem 0.25rem;
    margin: -0.75rem -0.25rem;
    color: inherit;
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: var(--font-size-md);
    line-height: var(--line-height-tight);
    transition: color 250ms ease;
  }

  div {
    display: flex;
    flex-direction: row;
    gap: 1.5rem;
  }

  .active {
    font-weight: 600;
    text-decoration: var(--color-accent) underline 2px;
    text-underline-offset: 0.5rem;
  }

  .active,
  a:hover {
    color: var(--color-accent);
  }
</style>
